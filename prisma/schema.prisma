datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Organization {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())
  projects  Project[]
  users     OrgUser[]
}

model OrgUser {
  id             String       @id @default(cuid())
  email          String
  role           OrgUserRole  @default(MEMBER)
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  user           User?        @relation(fields: [userId], references: [id])
  userId         String?

  @@unique([organizationId, email])
}

enum OrgUserRole {
  ADMIN
  MEMBER
}

model Project {
  id             String        @id @default(cuid())
  name           String
  apiKey         String        @unique
  createdAt      DateTime      @default(now())
  organization   Organization  @relation(fields: [organizationId], references: [id])
  organizationId String
  trackedUsers   TrackedUser[]
  events         Event[]
}

model TrackedUser {
  id          String   @id @default(cuid())
  externalId  String
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String
  firstSeenAt DateTime @default(now())
  lastSeenAt  DateTime @default(now())
  events      Event[]

  @@unique([projectId, externalId])
}

model Event {
  id            String      @id @default(cuid())
  project       Project     @relation(fields: [projectId], references: [id])
  projectId     String
  trackedUser   TrackedUser @relation(fields: [trackedUserId], references: [id])
  trackedUserId String
  eventName     String
  properties    Json?
  occurredAt    DateTime    @default(now())

  sessionId String?

  @@index([projectId, occurredAt])
  @@index([projectId, eventName])
  @@index([trackedUserId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String? // Hashed password for credentials provider
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]

  orgUsers OrgUser[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
